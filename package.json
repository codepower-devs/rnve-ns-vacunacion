{
  "name": "backend-base",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "set NODE_ENV=development&& nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "typeorm": "set NODE_OPTIONS=--max_old_space_size=8192&& ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js"
  },
  "dependencies": {
    "@elartedelcodigo/check-node-version": "1.1.7",
    "@golevelup/ts-jest": "0.5.0",
    "@nestjs/axios": "3.0.2",
    "@nestjs/common": "10.3.8",
    "@nestjs/config": "3.2.2",
    "@nestjs/core": "10.3.8",
    "@nestjs/microservices": "^10.3.9",
    "@nestjs/platform-express": "10.3.8",
    "@nestjs/schedule": "4.0.2",
    "@nestjs/swagger": "7.3.1",
    "@nestjs/typeorm": "10.0.2",
    "@types/express-list-endpoints": "6.0.3",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.1",
    "cls-rtracer": "2.6.3",
    "connect-typeorm": "2.0.0",
    "cookie-parser": "1.4.6",
    "csurf": "1.11.0",
    "dayjs": "^1.11.11",
    "dotenv": "^16.4.5",
    "ejs": "3.1.10",
    "express-list-endpoints": "7.1.0",
    "fast-redact": "3.5.0",
    "file-stream-rotator": "^1.0.0",
    "flatted": "3.3.1",
    "husky": "9.0.11",
    "ip": "2.0.1",
    "loki": "^0.35.0",
    "nacos": "^2.6.0",
    "nanoid": "^5.0.7",
    "openid-client": "5.6.5",
    "pako": "2.1.0",
    "pg": "8.11.5",
    "pino": "^9.1.0",
    "pino-loki": "2.3.0",
    "rimraf": "^5.0.7",
    "rxjs": "7.8.1",
    "sql-formatter": "^15.3.1",
    "swagger-ui-express": "5.0.0",
    "typeorm": "0.3.20",
    "typeorm-adapter": "1.7.0",
    "uuid": "^9.0.1",
    "zxcvbn-typescript": "5.0.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "19.2.2",
    "@compodoc/compodoc": "^1.1.25",
    "@nestjs/cli": "10.3.2",
    "@nestjs/schematics": "10.1.1",
    "@nestjs/testing": "10.3.8",
    "@types/cookie-parser": "1.4.7",
    "@types/cron": "^2.0.1",
    "@types/express": "4.17.21",
    "@types/express-session": "1.18.0",
    "@types/fast-redact": "3.0.4",
    "@types/ip": "1.1.3",
    "@types/jest": "29.5.12",
    "@types/node": "^20.12.13",
    "@types/pako": "2.0.3",
    "@types/supertest": "6.0.2",
    "@types/uuid": "9.0.8",
    "@types/zxcvbn": "4.4.4",
    "@typescript-eslint/eslint-plugin": "^7.11.0",
    "@typescript-eslint/parser": "^7.11.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-prettier": "5.1.3",
    "jest": "29.7.0",
    "jest-sonar-reporter": "2.0.0",
    "prettier": "3.2.5",
    "standard-version": "9.5.0",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.4",
    "ts-loader": "9.5.1",
    "ts-node": "10.9.2",
    "tsconfig-paths": "4.2.0",
    "typescript": "5.4.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "src/main.ts",
      "src/database/migrations/",
      "src/database/seeds/",
      ".module.ts",
      ".entity.ts",
      ".dto.ts",
      ".guard.ts",
      ".enum.ts"
    ],
    "collectCoverage": true,
    "testResultsProcessor": "jest-sonar-reporter",
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/../src/$1"
    }
  },
  "engines": {
    "node": "^20",
    "npm": ">=10"
  }
}
